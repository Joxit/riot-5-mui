      classes: [
        {
          name: 'material-switch-container',
          description: 'This is the container of the switch.',
        },
        {
          name: 'material-switch-thumb',
          description: 'Style for the thumb, you can change the `background-color`.',
        },
        {
          name: 'material-switch-track',
          description: 'Style for the track, you can change the `background-color` and `border-color`.',
        },
      ],
    };

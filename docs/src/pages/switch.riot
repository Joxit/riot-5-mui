  <h2>Props</h2>
  <props-table properties="{ properties }"></props-table>

  <h2>Classes</h2>
  <props-table properties="{ classes }" kind="classes"></props-table>

  <script>
    import { MaterialSwitch } from 'riot-mui';
    import PropsTable from '../components/props-table.riot';
    export default {
      components: {
        MaterialSwitch,
        PropsTable,
      },
      properties: [
        {
          name: 'on-change',
          type: 'function',
          default: '',
          description:
            'Set a callback function for on-change event. The first parameter is an Event. The value of the state is located in `e.target.checked` and can be `true`, `false` or `intermediate`.',
        },
        {
          name: 'intermediate',
          type: 'boolean',
          default: 'false',
          description: 'Add a third intermediate state, between true and false.',
        },
        {
          name: 'checked',
          type: 'boolean',
          default: '',
          description:
            'Either `true` or `false` or `intermediate`, use this property to manage the state of the switch.',
        },
        {
          name: 'disabled',
          type: 'boolean',
          default: '',
          description: 'Disable the switch, this will remove all callbacks and change the UI.',
        },
        {
          name: 'thumb-color',
          type: 'string',
          default: '',
          description: 'Set a custom color for the thumb of the switch.',
        },
        {
          name: 'thumb-selected-color',
          type: 'string',
          default: '',
          description: 'Set a custom color for the thumb of the switch when selected.',
        },
        {
          name: 'track-color',
          type: 'string',
          default: '',
          description: 'Set a custom color for the track (background) of the switch.',

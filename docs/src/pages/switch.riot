  <div class="example-container">
    <div class="example-rendered">
      <div class="example-row">
        <material-switch size="42px"></material-switch>
        <material-switch
          thumb-color="#938F99"
          thumb-selected-color="#371E73"
          track-color="#49454F"
          track-selected-color="#D0BCFF"
          outline-color="#938F99"
          outline-selected-color="#D0BCFF"
